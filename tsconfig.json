{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",            // Change this to NodeNext
    "moduleResolution": "NodeNext", // Keep this as NodeNext
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts","next-env.d.ts",".next/types/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
